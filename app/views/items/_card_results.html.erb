<% items.each do |item| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="card-image-results">
      <%= link_to item_path(item.id) do %>
        <div class="card-image-index" style="background-image: url(<%= cl_image_path item.photo %>)"></div>
      <% end %>
      <div class="card-description">
        <h3><%= item.name %></h3>
        <p> <strong>Rent per day: $<%= item.rental_price_cents / 100 %></strong>Buy it for: $<%= item.buying_price_cents / 100 %></p>
        <p>This is the rating and comments</p>
      </div>
      <div class="card-rating">
      </div>
    </div>
  </div>
<% end %>
