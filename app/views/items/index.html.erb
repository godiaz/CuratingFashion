<div class="container">
  <h1>List of items</h1>
  <% @items.each do |item| %>
  <ul>
    <li>
     <div class="col-xs-12 col-sm-4" style="margin-bottom: 20px;">
      <div class="card"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
        url('<%= cl_image_path item.photo%>')">
        <div class="card-category"></div>
        <div class="card-description">
        <p><%= item.name %></p>
        </div>
        <%= link_to "", item_path(item), class: "card-link" %>
      </div>
    </div>
    <%= link_to 'edit', edit_item_path(item) %>
    <%= link_to 'delete', item_path(item), method: :delete %>
    </li>
  </ul>
    <% end %>
    <%= link_to 'add an item', new_item_path(@item) %>
</div>
