<div class="container-results-main">
  <div class="container-results">

    <%= simple_form_for @item, url: items_path, method: :get, html: { class: 'form-inline' } do |f| %>
      <%= f.error_notification %>

        <td class="select-form"><%= f.input :size, collection: @sizes, label: false, prompt: "Size" %></td>

        <td class="select-form"><%= f.input :buying_price, collection: @prices, label: false, prompt: "Buy price" %></td>

        <td class="select-form"><%= f.input :rental_price, collection: @prices, label: false, prompt: "Rent price" %></td>

        <td class="select-form"><%= f.submit "Apply" %></td>
    <% end %>

  <!-- 1) Cards -->
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <% @items.each do |item| %>
          <div class="col-xs-12 col-sm-4 card-boot" style="margin-bottom: 20px; margin-right: 0px">
            <div class="card-results">
                <%= link_to item_path(item.id) do %>
                  <div class="card-image" style="background-image: url(<%= cl_image_path item.photo %>)"></div>
                <% end %>
                <div class="card-description">
                  <h3><%= item.name %></h3>
                  <p> <strong>Rent per day: $<%= item.rental_price %></strong>    Buy it for: $<%= item.buying_price %></p>
                  <p>This is the rating and comments</p>
                </div>
                <div class="card-rating">
                </div>
            </div>
          </div>
        <% end %>
      </div>
      <!-- 2) Map -->
      <div class="col-xs-12 col-sm-6 map-index">
        <div id="map" style="margin-left: 45px; width: 85%; height: 590px;" data-markers="<%= @markers.to_json %>"></div>
      </div>
    </div>
  </div>
</div>
