<ul class="nav nav-tabs">
  <li class="active dashboard-link"><a data-toggle="tab" href="#profile">Profile</a></li>
  <li class="dashboard-link"><a data-toggle="tab" href="#book">Bookings</a></li>
  <li class="dashboard-link"><a data-toggle="tab" href="#list">Listings</a></li>
  <li class="dashboard-link" id="show-calendar-tab"><a data-toggle="tab" href="#calendar">Calendar</a></li>

</ul>


<div class="tab-content">

  <div id="profile" class="tab-pane fade in active">
    <div class="container-profile-page">
      <h1>Welcome <%= current_user.first_name %></h1>
      <div>
        <h2>Personal details</h2>
        <p>First name: <%= @user.first_name %></p>
        <p>First name: <%= @user.email %></p>
        <p>Last name: <%= @user.last_name %></p>
        <p>Address: <%= @user.address %></p>
        <p>Phone number: <%= @user.phone_number %></p>
        <p>City: <%= @user.city %></p>
        <p>Age: <%= @user.age %></p>
        <p>Gender: <%= @user.gender %></p>
        <p>ID verification</p>
      </div>

      <div class="activity_overview">
        <div>
          <h2>Activity overview</h2>
          <p>Revenues: £500 in 2018</p>
          <p>Listing reviewed/30 days: 50</p>
          <p>Overall rating: 4.5*</p>
          <p>Total reviews: 22</p>
          <p>5 star reviews: 80%</p>
          <p>Order history</p>
        </div>
          <h2>Share your passion for renting</h2>
          <p>Refer a friend and get £45 when they rent there first item</p>
        <button type="button" class="button btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Refer a friend
        </button>

                <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Refer a friend</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Share and get £45</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>

            </div>
          </div>

        </div>
      </div>
    </div>
  </div>


  <div id="book" class="tab-pane fade">
    <div class="container">
    <h1>My bookings</h1>
      <div class="row">
        <% @bookings.each do |booking| %>
          <div class="col-xs-6 col-sm-3">
            <div class="card mw">
              <%= link_to item_path(booking.item) do %>
                <div class="card-image" style="background-image: url(<%= image_tag = booking.item.photo %>)"></div>
              <% end %>
              <div class="card-description">
                <h3><%= booking.item.name %></h3>
                <p>From <%= booking.start_date.strftime("%d/%m") %> to <%= booking.end_date.strftime("%d/%m") %></p>
              </div>
              <div class="card-rating">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div id="list" class="tab-pane fade">
    <div class="container">
      <h1>My items to rent</h1>
      <div class="row">
        <% @items.each do |item| %>
          <% if item.user == current_user %>
            <div class="col-xs-12 col-sm-4" style="margin-bottom: 20px;">
              <div class="card mw">
                <%= link_to item_path(item) do %>
                  <div class="card-image" style="background-image: url(<%= image_tag = item.photo %>)"></div>
                <% end %>
                <div class="card-description">
                  <h3><%= link_to item.name, item_path(item), class: "name-item" %></h3>
                </div>
                <div class="card-rating">
                </div>
              </div>

          <div class="listing-status">
            <p class="listing-status-items">Availability:</p>
            <% if @available_items.include?(item) %>
              <p class="grey listing-status-items">Pending</p>
              <p class="grey listing-status-items">Booked</p>
              <a data-toggle="tab" href="#calendar"><i data-calendar-id="<%= item.id %>" class="fa fa-calendar-alt js-click"></i></a>
            <% elsif @pending_items.include?(item) %>
              <p class="orange listing-status-items">Pending</p>
              <p class="grey listing-status-items">Booked</p>
              <a data-toggle="tab" href="#calendar"><i data-calendar-id="<%= item.id %>"class="fa fa-calendar-alt js-click"></i></a>
            <% elsif @accepted_items.include?(item) %>
              <p class="grey listing-status-items">Pending</p>
              <p class="green listing-status-items">Booked</p>
              <a data-toggle="tab" href="#calendar"><i data-calendar-id="<%= item.id %>" class="fa fa-calendar-alt js-click"></i></a>
            <% elsif @pendingandbooked.include?(item) %>
              <p class="orange listing-status-items">Pending</p>
              <p class="green listing-status-items">Booked</p>
              <a data-toggle="tab" href="#calendar"><i data-calendar-id="<%= item.id %>" class="fa fa-calendar-alt js-click"></i></a>
            <% end %>


            </div>
          <% end %>
        <% end %>
      </div>
      </div>
      <div class="row">
        <%= link_to 'add an item', new_item_path(@item)%>
      </div>
    </div>
  </div>


  <div id="calendar" class="tab-pane fade">
    <div class="calendar-page-container">
      <div>
        <div class="drop-down-see-item">
          <div class="dropdown-div">
            <div class="dropdown">
              <button id="dLabel" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown trigger
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dLabel">
                <% @items_listing.each do |item| %>
                  <li><a class="dropdown-item" href="#"><%= item.name %></a></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="calendar-view-item-button">
             <span><%= link_to 'view item'  %></span>
          </div>
        </div>
        <div class="calendar-container">
          <div class="calendar">
            <%= month_calendar(attribute: :start_date, end_attribute: :end_date)  do |date, bookings| %>
              <%= date.day %>
                <% bookings.each do |booking| %>
                <div>
                  <%= booking.item.name %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
      <div>
        <span>Increase revenues from rentals</span>
      </div>

    </div>
  </div>

</div>

<%= javascript_pack_tag 'dashboard' %>

