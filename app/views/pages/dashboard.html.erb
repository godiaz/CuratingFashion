<div class="container-landing-page">
  <h1>Welcome <%= current_user.first_name %></h1>

  <div
  id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>">
  </div>

  <div class ="flex-landing-page">
    <div>
      <h2>What would you like to do?</h2>
      <p>view all listings</p>
      <p>current orders</p>
      <p>order history</p>
      <p>ID verification</p>
    </div>


    <div class="activity_overview">
      <div>
        <h2>Activity overview</h2>
        <p>Revenues: "May"</p>
        <p>Listing reviewed/30 days: "50"</p>
        <p>Overall rating: "4.5*"</p>
        <p>Total reviews: "22"</p>
        <p>5 star reviews: "80%"</p>
      </div>

      <div>
        <h2>Share your passion for renting</h2>
        <p>Refer a friend and get £45 when they rent there first item</p>

        <button type="button" class="button btn btn-primary" data-toggle="modal" data-target="#exampleModal">
          Refer a friend
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Refer a friend</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Share and get £45</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                  </div>
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>
</div>
