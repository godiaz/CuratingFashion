<div class="container">
  <h1>My items to rent</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-xs-12 col-sm-4" style="margin-bottom: 20px;">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path item.photo%>');">
          <div class="card-description">
            <h2><%= link_to item.name, item_path(item) %></h2>
          </div>
          <%= link_to 'edit', edit_item_path(item) %>
          <%= link_to 'delete', item_path(item), method: :delete %>
        </div>
        <div class="listing-status">
          <p>Availability:</p>
          <% if @available_items.include?(item) %>
            <p class="grey">Pending</p>
            <p class="grey">Booked</p>
            <%= link_to '<i class="fa fa-calendar-alt"></i>'.html_safe, calendar_path(item) %>
          <% elsif @pending_items.include?(item) %>
            <p class="orange">Pending</p>
            <p class="grey">Booked</p>
            <%= link_to '<i class="fa fa-calendar-alt"></i>'.html_safe, calendar_path(item) %>
          <% elsif @accepted_items.include?(item) %>
            <p class="grey">Pending</p>
            <p class="green">Booked</p>
            <%= link_to '<i class="fa fa-calendar-alt"></i>'.html_safe, calendar_path(item) %>
          <% elsif @pendingandbooked.include?(item) %>
            <p class="orange">Pending</p>
            <p class="green">Booked</p>
            <%= link_to '<i class="fa fa-calendar-alt"></i>'.html_safe, calendar_path(item) %>
          <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
<%= link_to 'add an item', new_item_path(@item) %>
