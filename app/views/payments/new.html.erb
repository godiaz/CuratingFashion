<!-- app/views/payments/new.html.erb -->

<div class="payment-summary-container">
  <div class="payment-summary-box">
  <h1>Your Purchase Summary <%= @order.item_sku %></h1>
  <p>Please review your order before submitting payment</p>

  <h3>Your Item:</h3>

  <%= form_tag order_payments_path(@order) do %>
    <article>
      <label class="amount">
        <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
      </label>
    </article>

    <!-- # Commented for the lecture, remove comments. -->
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="My Order"
      data-email="<%= current_user.email %>"
      data-description="Item <%= @order.item_sku %>"
      data-amount="<%= @order.amount_cents %>"
      data-currency="<%= @order.amount.currency %>"></script>
   
  <% end %>
  </div>
</div>