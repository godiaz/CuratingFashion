<div class="container-min-height">
  <div>
    <h1>Bookings</h1>
    <div>
    </div>
  </div>

<div class="container-item-show">
  <div class="card image-item-show-page" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @item.photo%>');">
  </div>
  <div class="item-description">
  <h1><%= @item.name %></h1>
  <p><%= @booking.item.name %></p>
  <div class="remove-box">
    <button data-toggle="modal" data-target="#edit-modal-<%= @booking.id %>" class="fa fa-edit">
    </button>
  </div>

  <div class="margin-of-card-edit">
    <%= link_to item_path(@item), method: :delete do %>
      <i class="fas fa-trash-alt delete-bin js-click"></i>
    <% end %>
  </div>

          <div id="edit-modal-<%= @booking.id %>" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title">Booking for <%= @booking.item.name %></h5>
                </div>
                  <div class="row">
                    <div class="col-xs-6">
                      <div class="date_form">
                        <%= simple_form_for([@booking.item, @booking]) do |f| %>
                          <%= f.input :start_date, as: :date, order: [:day, :month, :year], input_html: { class: "form_style" }%>
                          <%= f.input :end_date, as: :date, order: [:day, :month, :year],input_html: { class: "form_style" } %>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer">
                    <%= f.submit "update", class: "btn-xs" %>
                    <% end %>
                  </div>
              </div>
            </div>
          </div>


  <p><%= link_to "Delete booking", item_booking_path(@item, @booking), method: :delete %></p>
  <p><%= @booking.start_date.strftime("%d/%m/%Y - ") %></p>
  <p><%= @booking.end_date.strftime("%d/%m/%Y") %></p>
      <p>Price per day £<%= @booking.item.rental_price_cents / 100 %></p>
      <p>Price to buy £<%= @booking.item.buying_price_cents / 100 %></p>
    <p> description </p>
    <p><%= @item.description %></p>
    <p>Size: <%= @item.size %></p>
  </div>
</div>
  <%= link_to "Back", user_bookings_path(current_user) %>
</div>
