<div class="navbar-wagon">
  <div class="navbar-logo-search">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "ufologonew.png", height: 50 %>
  <% end %>

  <!-- Search -->
    <div class="navbar-search">
    <% unless (params[:controller] == 'pages' && params[:action] == 'home') || devise_controller? %>
      <%= form_tag items_path, method: :get, class: "form-inline" do %>
        <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "What item?" %>
        <%= text_field_tag :place, params[:place], class: "form-control", placeholder: "Where?" %>
        <input type="hidden" name="location" value="<%= @location&.empty? ? 'London' : @location %>">
        <%= submit_tag :submit, class: "hidden" %>
      <% end %>
    <% end %>
    </div>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Nearby Items", items_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Groups", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "https://www.biography.com/.image/t_share/MTM5MjE5MzAzODUyNDE4Mzk5/pablo-escobar-gettyimages-452490135_621jpg.jpg", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_path(current_user) do %>
              <i class="fas fa-user-alt"></i>  <%= t(".", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_bookings_path(current_user)  do %>
              <i class="fas fa-shopping-bag"></i> <%= t(".", default: "My Bookings") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_listing_path do %>
              <i class="fas fa-box-open"></i> <%= t(".", default: "My Listings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fa fa-sign-out-alt"></i>  <%= t(".", default: "Log Out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Nearby Items", items_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Groups", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Log In"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_up", default: "Sign Up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>
